FROM	debian:bullseye
RUN		apt-get update -y
RUN		apt-get upgrade -y
RUN		apt-get install vsftpd -y
RUN		sed -i 's/^anonymous_enable=NO/anonymous_enable=YES/' /etc/vsftpd.conf
CMD		["vsftpd"]
